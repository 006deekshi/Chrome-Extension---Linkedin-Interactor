{
  "manifest_version": 3,
  "name": "LinkedIn Auto Liker & Commenter",
  "description": "Open LinkedIn feed and randomly like/comment on posts according to popup inputs.",
  "version": "1.1.0",
  "permissions": [
    "scripting",
    "tabs",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}